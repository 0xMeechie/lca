[
  {
    "name": "${CONTAINER_NAME}",
    "image": "${CONTAINER_IMAGE}:${CONTAINER_VERSION}",
    "memory": 512,
    "cpu": 256,
    "essential": true,
    "environment": [
      {
        "name": "DB_HOST",
        "value": "${DB_HOST}"
      },
      {
        "name": "DB_USER",
        "value": "${DB_USER}"
      },
      {
        "name": "DB_PW",
        "value": "${DB_PW}"
      }
    ],
    "portMappings": [
      {
        "containerPort": ${CONTAINER_PORT},
        "hostPort": ${CONTAINER_PORT}
        }
    ]
  }
]
